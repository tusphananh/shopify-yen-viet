{{ 'products-overview.css' | asset_url | stylesheet_tag }}

<div class="products-overview__container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {% for block in section.blocks %}
    <div class="products-overview__column">
      <img
        width="100%"
        height="500"
        class="products-overview__image"
        src="{{ block.settings.image | img_url: 'master' }}"
        alt="{{ block.settings.title }}"
      >
      <div class="products-overview--shadow"></div>
      <div class="products-overview--info">
        <h2 class="products-overview__header">{{ block.settings.title }}</h2>
        <div>
          <p class="products-overview__description">{{ block.settings.description }}</p>
          <a class="products-overview__link" href="{{block.settings.button_link}}">
            {{- block.settings.button_label | escape -}}
            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" fill="black">
            <path d="M4 12H20M20 12L16 8M20 12L16 16" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Products Overview",
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.multirow.blocks.row.settings.button_label.label"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Product Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Product Description"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.multirow.blocks.row.settings.button_link.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.multirow.blocks.row.settings.button_label.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products Overview",
      "category": "Products"
    }
  ]
}
{% endschema %}
