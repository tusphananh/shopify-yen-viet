{{ 'product-epic.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="product-epic__wrapper">
    <div class="product-epic__container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <img
        width="100%"
        height="100%"
        src="{{ section.settings.image | img_url: 'master' }}"
        alt="{{ section.settings.title }}"
        class="product-epic__image"
      >
      <div class="gradient-blur">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>

      <div class="product-epic__content">
        <h2 class="product-epic__title">{{ section.settings.title }}</h2>
        <div>
          <p class="product-epic__description">{{ section.settings.description }}</p>
          <a href="{{ section.settings.button_link }}" class="product-epic__button">
            {{- section.settings.button_label -}}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Products Epic",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Product Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Product Description"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.multirow.blocks.row.settings.button_link.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.multirow.blocks.row.settings.button_label.label"
    }
  ],

  "presets": [
    {
      "name": "Products Epic",
      "category": "Products"
    }
  ]
}
{% endschema %}
